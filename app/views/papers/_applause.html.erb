<div class="applause">
	<%  applause_count = @paper.applause.size  %>

	<%= link_to image_tag('hands-clapping.jpg'), create_applause_path( :paper_id => @paper.id ), {:method => "POST" } %>
	<br/>
	Cheer up the author!
	<br/><br/>
	<% if applause_count == 1 %>
		<%= APP_AUTHOR["name"] %> has been cheered up once!
	<% elsif applause_count > 1%>
		<%= APP_AUTHOR["name"] %> has been cheered up <%=  applause_count %> times! <br/>
	<% end %>
</div>		